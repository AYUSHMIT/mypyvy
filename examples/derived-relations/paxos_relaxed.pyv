derived relation r(quorum, round):
  quorum_active(Q0) & round_active(R0)
  -> 
  (r(Q0, R0) <->
   (exists N0.
     node_active(N0) &
     member(N0, Q0) &
     left_round(N0, R0) &
     one_b(N0, R0)))

