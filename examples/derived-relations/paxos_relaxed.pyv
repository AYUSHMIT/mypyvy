immutable constant r1: round
immutable constant r2: round
axiom r1 != r2

sat trace {
  send_1a
  join_round(*, r1)
  propose
  cast_vote
  decide

  send_1a
  join_round(*, r2)

  decrease_domain

  propose
  cast_vote
  decide


  assert !(
    forall R1, R2, V1, V2.
    round_active(R1) & round_active(R2) &
    value_active(V1) & value_active(V2)
    -> 
    decision(R1, V1) & decision(R2, V2)
    ->
    V1 = V2
  )
}
